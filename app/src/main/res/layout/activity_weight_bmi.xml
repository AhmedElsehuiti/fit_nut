<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.home_fragment.WeightBMI">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update  weight"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/green"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/weight_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginEnd="20dp"
        app:boxStrokeColor="@color/green"
        android:hint="Enter your weight today"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="120"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/layoutLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weight_input"
        android:orientation="vertical"
       android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                style="@android:style/Widget.Button"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="65dp"
                android:background="@drawable/singup"
                android:baselineAligned="false"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                style="@android:style/Widget.Button"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="65dp"
                android:background="@drawable/singup"
                android:baselineAligned="false"
                android:text="Save"
                android:layout_marginStart="@dimen/_100sdp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        tools:ignore="ExtraText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Weight"
            android:textStyle="normal"
            android:textColor="@color/grey2"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/normal_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            android:textStyle="normal"

            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/green"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kgm"
            android:textStyle="normal"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/green"
            android:textSize="24sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        tools:ignore="ExtraText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your normal weight ranges from "
            android:textColor="@color/grey2"
            android:textSize="@dimen/_13sdp"
            />
        <TextView
            android:id="@+id/normal_low_weight_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_14sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_14sdp"
            />
        <TextView
            android:id="@+id/normal_higher_weight_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_14sdp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ExtraText">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go to monitor your eating use the calorie guide window"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/grey2"
            android:textSize="@dimen/_14sdp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        tools:ignore="ExtraText">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calories"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/singup"
            android:baselineAligned="false"
            android:text="Go for calories"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/layoutLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>