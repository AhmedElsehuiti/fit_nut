<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    android:background="@color/white"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/profile_ph"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/green"
            android:layout_centerInParent="true"
           />
        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s Activities"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chatIcon" />
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_circular_km"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cpb_background_progressbar_color="#949494"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="#379E3B"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toStartOf="@+id/progress_circular2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activities"
            />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_circular2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cpb_background_progressbar_color="#949494"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="#379E3B"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toStartOf="@+id/circularProgressBarTotalCal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/progress_circular_km"
            app:layout_constraintTop_toBottomOf="@id/activities"
             />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBarTotalCal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cpb_background_progressbar_color="#949494"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_max="2500"
            app:cpb_progressbar_color="#379E3B"
            app:cpb_round_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/progress_circular2"
            app:layout_constraintTop_toBottomOf="@id/activities"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/_0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/progress_circular2"
            app:layout_constraintEnd_toEndOf="@id/progress_circular2"
            app:layout_constraintStart_toStartOf="@id/progress_circular2"
            app:layout_constraintTop_toTopOf="@id/progress_circular2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2500"
            app:layout_constraintEnd_toEndOf="@id/progress_circular2"
            app:layout_constraintStart_toStartOf="@id/progress_circular2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textViewKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/_0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/progress_circular_km"
            app:layout_constraintEnd_toEndOf="@id/progress_circular_km"
            app:layout_constraintStart_toStartOf="@id/progress_circular_km"
            app:layout_constraintTop_toTopOf="@id/progress_circular_km" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            app:layout_constraintEnd_toEndOf="@id/progress_circular_km"
            app:layout_constraintStart_toStartOf="@id/progress_circular_km"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/totalCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/_0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/circularProgressBarTotalCal"
            app:layout_constraintEnd_toEndOf="@id/circularProgressBarTotalCal"
            app:layout_constraintStart_toStartOf="@id/circularProgressBarTotalCal"
            app:layout_constraintTop_toTopOf="@id/circularProgressBarTotalCal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cal"
            app:layout_constraintEnd_toEndOf="@id/circularProgressBarTotalCal"
            app:layout_constraintStart_toStartOf="@id/circularProgressBarTotalCal"
            app:layout_constraintTop_toBottomOf="@+id/totalCalories" />
        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circularProgressBarTotalCal" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/my_heart"
                    android:layout_margin="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart_rate"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PBM"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="190dp"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card1"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrain"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/constrain"
                    app:layout_constraintTop_toTopOf="@id/constrain"
                    android:src="@drawable/back_s"
                    android:layout_margin="15dp"
                    />
                <TextView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO"
                    android:layout_marginTop="15dp"
                    android:text="Each addition is 240 ml"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:text="0"

                    android:textColor="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@id/constrain" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"

                    android:textColor="@color/green"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@id/textView5"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/green"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="liter"
                    android:textColor="@color/green"
                    app:layout_constraintEnd_toEndOf="@id/textView11"
                    app:layout_constraintTop_toBottomOf="@id/textView11"
                    />
                <TextView
                    android:id="@+id/mo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mo"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toStartOf="@id/constrain"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    />
                <TextView
                    android:id="@+id/tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@id/mo"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    />
                <TextView
                    android:id="@+id/we"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@id/tu"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    />
                <TextView
                    android:id="@+id/th"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Th"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@id/we"
                    />
                <TextView
                    android:id="@+id/fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fr"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@+id/th"
                    />
                <TextView
                    android:id="@+id/sa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sa"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@+id/fr"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"
                    />
                <TextView
                    android:id="@+id/su"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Su"
                    app:layout_constraintBottom_toBottomOf="@id/constrain"
                    app:layout_constraintStart_toEndOf="@+id/sa"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_22sdp"


                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_mo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"

                    app:layout_constraintStart_toStartOf="@id/mo"
                    app:layout_constraintEnd_toEndOf="@id/mo"
                    app:layout_constraintBottom_toTopOf="@id/mo"


                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_tu"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"

                    app:layout_constraintBottom_toTopOf="@id/tu"
                    app:layout_constraintStart_toStartOf="@id/tu"
                    app:layout_constraintEnd_toEndOf="@id/tu"

                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_we"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"

                    app:layout_constraintBottom_toTopOf="@id/we"
                    app:layout_constraintStart_toStartOf="@id/we"
                    app:layout_constraintEnd_toEndOf="@id/we"

                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_th"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"

                    app:layout_constraintBottom_toTopOf="@id/th"
                    app:layout_constraintStart_toStartOf="@id/th"
                    app:layout_constraintEnd_toEndOf="@id/th"

                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_fr"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"

                    app:layout_constraintBottom_toTopOf="@id/fr"
                    app:layout_constraintStart_toStartOf="@id/fr"
                    app:layout_constraintEnd_toEndOf="@id/fr"

                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_sa"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"
                    app:layout_constraintBottom_toTopOf="@id/sa"
                    app:layout_constraintStart_toStartOf="@id/sa"
                    app:layout_constraintEnd_toEndOf="@id/sa"

                    />
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/Progress_su"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="10dp"
                    app:cpb_background_progressbar_color="#949494"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progress_max="2500"
                    app:cpb_progressbar_color="#379E3B"
                    app:cpb_round_border="true"
                    app:layout_constraintBottom_toTopOf="@id/su"
                    app:layout_constraintStart_toStartOf="@id/su"
                    app:layout_constraintEnd_toEndOf="@id/su"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="TODO"
                            app:srcCompat="@drawable/add" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="60dp"

                            android:layout_weight="1"
                            app:srcCompat="@drawable/water" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:padding="5dp"
                            android:layout_weight="1"

                            android:background="@color/white"
                            app:srcCompat="@drawable/minus"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="130dp"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card2"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:elevation="20dp">
            <LinearLayout
                android:id="@+id/cal_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left"
                    android:layout_marginStart="70dp"
                    >
                    <TextView
                        android:id="@+id/wight_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/green"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="kgm"
                        android:textColor="@color/grey2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Update your weight from here "
                        android:textColor="@color/green"
                        />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="25dp"
            app:layout_constraintTop_toTopOf="@id/card3"
            app:layout_constraintBottom_toBottomOf="@id/card3"
            app:layout_constraintEnd_toEndOf="@id/card3"
            android:src="@drawable/weight"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card3"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Featured Articles"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/green"
            android:textSize="20sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>